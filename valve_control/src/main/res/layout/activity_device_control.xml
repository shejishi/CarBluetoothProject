<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:keepScreenOn="true"


    >

    <ImageView
        android:id="@+id/imageView_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:src="@mipmap/background" />
    <ImageButton
        android:id="@+id/img_btn_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"

        android:layout_alignTop="@id/imageView_background"
        android:layout_alignLeft="@id/imageView_background"

        android:src="@mipmap/back" />

    <ImageView
        android:id="@+id/imageView_calibration"
        android:layout_width="211dp"
        android:layout_height="169dp"


        android:layout_alignTop="@+id/imageView_background"
        android:layout_alignLeft="@+id/imageView_background"

        android:layout_marginTop="0dp"
        app:srcCompat="@mipmap/calibration" />


    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/progress_water_tmp"
        android:layout_width="75dp"
        android:layout_height="65dp"
        android:layout_alignLeft="@id/imageView_background"
        android:progress="0"
        android:max="160"
        android:layout_marginStart="246dp"
        android:layout_alignBottom="@id/imageView_calibration"
        android:progressDrawable="@drawable/progress_bar_left"
         />

    <ProgressBar
        android:id="@+id/progress_oli_tmp"
        style="?android:attr/progressBarStyleHorizontal"
        android:progress="0"
        android:max="160"
        android:layout_width="75dp"
        android:layout_height="65dp"
        android:layout_alignEnd="@+id/imageView_background"
        android:progressDrawable="@drawable/progress_bar_right"
        android:layout_alignBottom="@id/imageView_calibration"
        android:layout_marginEnd="246dp"
         />


    <ImageView
        android:id="@+id/imageView_zhizhen_carSpeed"
        android:layout_width="43dp"
        android:layout_height="46dp"
        android:layout_alignLeft="@id/imageView_background"
        android:layout_alignTop="@id/imageView_background"
        android:layout_marginStart="516dp"
        android:layout_marginTop="73dp"

        app:srcCompat="@mipmap/zhizhen" />

    <ImageView
        android:id="@+id/imageView_zhizhen_motorSpeed"
        android:layout_width="41dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@id/imageView_background"
        android:layout_alignTop="@id/imageView_background"
        android:layout_marginStart="128dp"
        android:layout_marginTop="86dp"

        app:srcCompat="@mipmap/zhizhen" />

    <TextView
        android:id="@+id/txtView_motor_speed"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@id/imageView_background"
        android:layout_alignTop="@id/imageView_background"
        android:layout_marginStart="99dp"
        android:layout_marginTop="143dp"
        android:text="0"
        android:textColor="@color/white"
        android:gravity="center"


        android:textSize="30dp" />

    <TextView
        android:id="@+id/txtView_car_speed"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@id/imageView_background"
        android:layout_alignTop="@id/imageView_background"
        android:layout_marginStart="514dp"
        android:layout_marginTop="143dp"
        android:text="0"
        android:textColor="@color/white"
        android:gravity="center"


        android:textSize="30dp" />




    <ImageButton
        android:id="@+id/img_btn_AUTO"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignLeft="@id/imageView_background"
        android:layout_alignTop="@id/imageView_background"
        android:layout_marginStart="400dp"
        android:layout_marginTop="302dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/auto2" />



    <ImageButton
        android:id="@+id/img_btn_on"
        android:layout_width="65dp"
        android:layout_height="65dp"

        android:layout_alignLeft="@id/imageView_background"
        android:layout_alignTop="@id/imageView_background"
        android:layout_marginTop="299dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/on2" />



    <ImageButton
        android:id="@+id/img_btn_off"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignLeft="@id/imageView_background"
        android:layout_alignTop="@id/imageView_background"
        android:layout_marginTop="302dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/off2" />



    <ImageButton
        android:id="@+id/img_btn_delay"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignLeft="@id/imageView_background"
        android:layout_alignTop="@id/imageView_background"
        android:layout_marginStart="10dp"
        android:layout_marginTop="295dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/after" />

    <ImageButton
        android:id="@+id/img_btn_speed"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignLeft="@id/imageView_background"
        android:layout_alignTop="@id/imageView_background"
        android:layout_marginStart="589dp"
        android:layout_marginTop="311dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/rotate_speed_button" />




</RelativeLayout>